{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "xo"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript",
                "plugin:prettier/recommended"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // e.g. "@typescript-eslint/explicit-function-return-type": "off",
        "react/jsx-filename-extension": [1, {
            "extensions": [".ts", ".tsx"]}
        ]
    }
}
